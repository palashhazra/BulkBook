@model BulkBook.Models.Cart

<h1>Product Details</h1>

<form method="post">
	<div class="row">
		<div class="col-4">
			<img src="@Model.Product.ImageUrl" width="200" height="200" />
			<input type="hidden" asp-for="ProductId"/>
		</div>
		<div class="col-8">
			<div class="row">
				<label asp-for="Product.Name"><b>Product Title : @Model.Product.Name</b></label>
				<label asp-for="Product.Description">Product Description : @Model.Product.Description</label>
				<label asp-for="Product.Price">Product Price : @Model.Product.Price.ToString("0.00")</label>
				<label asp-for="Product.Category.Id">Product Category : @Model.Product.Category.Name</label>
				<div class="form-control">					
						<label asp-for="Count"></label>
						<input asp-for="Count" class="form-control" />
						<span class="text-warning" asp-validation-for="Count"></span>					
				</div>
				<div class="form-control">
					<button class="btn btn-success" asp-action="Index" asp-controller="Home">Back to List</button>
					<button class="btn btn-dark" type="submit">Add to Cart</button>
				</div>
				</div>
		</div>
	</div>
</form>