@model Category
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2>Category</h2><hr/>
		</div>
		<input type="hidden" asp-for="Id"/>
		<div asp-validation-summary="All"></div>
		<div class="row mb-3">
			<label asp-for="Name"></label>
			<input disabled asp-for="Name" class="form-control"/>
			<span class="text-warning" asp-validation-for="Name"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="DisplayOrder"></label>
			<input disabled asp-for="DisplayOrder" class="form-control" />
			<span class="text-warning" asp-validation-for="DisplayOrder"></span>
		</div>
		<button class="btn btn-danger" type="submit">Delete</button>
	</div>
	<a asp-action="Index" asp-controller="Category">Back to Category List</a>
</form>

@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}