@model BulkBook.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2>List of Products</h2>
        </div>
        <div class="col-6 text-end">

            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp;Create New Product</a>

        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>     
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    
</table>
@section scripts{
    <script src="~/js/Product.js"></script>
}